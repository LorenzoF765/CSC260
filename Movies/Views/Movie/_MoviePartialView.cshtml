@model Movie

@if (Model == null)
{
	<h2>No movie</h2>
}
else
{
	<h3>@Model.Title</h3>
	<h3>@Model.Year</h3>
	<h3>@Model.Rating</h3>
	<a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id"
   class="btn btn_primary mx-2"> <i class="bi bi-arrow-through-heart-fill"></i> Edit </a>
   <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id"
   class="bth btn-danger mx-2"> <i class="bi bi-trash3"></i> Delete </a>

}